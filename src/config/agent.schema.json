{
    "additionalProperties": false,
    "properties": {
        "addons": {
            "type": "object",
            "patternProperties": {
                "[a-zA-Z]+": {
                    "type": "object",
                    "required": ["active"],
                    "properties": {
                        "active": {
                            "type": "boolean",
                            "description": "Enable/Disable Addon",
                            "default": true
                        },
                        "standalone": {
                            "type": "boolean",
                            "description": "Fork Addon on a new NodeJS processes",
                            "default": false
                        }
                    },
                    "additionalProperties": false
                }
            }
        }
    }
}
